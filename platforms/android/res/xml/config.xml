<?xml version='1.0' encoding='utf-8'?>
<widget id="edu.bu.smgtools.mainapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets">
    <preference name="loglevel" value="DEBUG" />
    <preference name="AndroidLaunchMode" value="singleTop" />
    <feature name="App">
        <param name="android-package" value="org.apache.cordova.App" />
    </feature>
    <feature name="Calendar">
        <param name="android-package" value="nl.xservices.plugins.Calendar" />
    </feature>
    <feature name="InAppBrowser">
        <param name="android-package" value="org.apache.cordova.inappbrowser.InAppBrowser" />
    </feature>
    <name>SMGTools</name>
    <description>
		The official SMGTools app.
	</description>
    <icon src="www/icon.png" />
    <preference name="Orientation" value="portrait" />
    <preference name="BackgroundColor" value="0xff4b4d4e" />
    <preference name="KeepRunning" value="false" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <plugin name="com.phonegap.plugin.statusbar" />
    <feature name="StatusBar">
        <param name="android-package" onload="true" value="org.apache.cordova.statusbar.StatusBar" />
        <param name="ios-package" onload="true" value="CDVStatusBar" />
    </feature>
    <access origin="*" />
</widget>
